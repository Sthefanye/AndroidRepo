<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_dark">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_default_28dp"
            android:layout_marginTop="@dimen/margin_default_36dp"
            android:fontFamily="@font/monasans_semi_bold"
            android:gravity="center"
            android:text="@string/popular_kotlin_repositories"
            android:textAlignment="center"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/title_text_size"
            android:contentDescription="@string/popular_kotlin_repositories"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/srUpdate"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_default_10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcListRepositories"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_default_6dp"
                tools:listitem="@layout/repositories_list_item" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <ProgressBar
            android:id="@+id/cpProgressIndicator"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:trackColor="@color/gray_light"
            app:indicatorColor="@color/gray"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/srUpdate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/srUpdate"
            app:layout_constraintTop_toTopOf="@+id/srUpdate" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>